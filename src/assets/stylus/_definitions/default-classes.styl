.grayscale {
    -webkit-filter: grayscale(100%);
    filter: grayscale(100%);
}

.pointer-events-none { pointer-events: none; }
.cursor-pointer { cursor: pointer; }
.overflow-hidden { overflow: hidden; }
.cursor-help { cursor: help; }
.text-transform-initial { text-transform: initial; }
.white-space-nowrap { white-space: nowrap; }
.outline-none { outline: none; }
.z-index-max { z-index: 99; }

.full-width { width: 100%; }
.stretch { align-self: stretch; }
.no-shrink { flex-shrink: 0; } 
.display-block { display: block; }
.display-inlineblock { display: block; }
.display-inline-flex { display: inline-flex; }

.flip-h {
    -webkit-transform: scale(-1, 1); 
    -moz-transform: scale(-1, 1); 
    -ms-transform: scale(-1, 1); 
    -o-transform: scale(-1, 1); 
    transform: scale(-1, 1);
}

.hidden-value {
    display: inline-block;
    height: 8px;
    width: 90px;
    background-color: rgba(0,0,0,.15);
    padding-bottom: 10px;

    &.inverted { background-color: alpha(white, .35); }
    &.big { 
        size(150px, 10px); 
        padding-top: 12px
    }
}
.label-value-product {
    top: -10px
    position: relative
    right: 0
    width: 140px
}

.hidden-value-category-product {
    display: inline-block;
    width: 80px;
    padding-bottom: 12px;    
    background-color: alpha(black, .15);

    &.inverted { background-color: alpha(white, .35); }
    &.big { 
        size(110px, 10px);
        padding-bottom: 18px; 
    }
}

.align-self-flex-end { align-self: flex-end !important; }
.align-self-flex-start { align-self: flex-start !important; }
.align-self-center { align-self: center !important; }
.align-self-stretch { align-self: stretch !important; }

.row-reverse { flex-direction: row-reverse; }

.responsive-image {
    display: block;
    max-width: 100%;
    height: auto;
}

.no-animate {
    -webkit-transition: none !important;
    transition: none !important;
    animation-name: initial !important;
    -webkit-animation-name: initial !important;
    animation-duration: 0s !important;
    -webkit-animation-duration: 0s !important;
}

// margin and paddings
sizes = 0 8 16 24 32 40;
for num in sizes {
  .p-{num} { padding: unit(num, px) !important; }
  .pb-{num} { padding-bottom: unit(num, px) !important; }
  .pt-{num} { padding-top: unit(num, px) !important; }
  .pl-{num} { padding-left: unit(num, px) !important; }
  .pr-{num} { padding-right: unit(num, px) !important; }

  .ptb-{num},
  .py-{num} {
    padding-top: unit(num, px) !important;
    padding-bottom: unit(num, px) !important;
  }

  .plr-{num},
  .px-{num} {
    padding-left: unit(num, px) !important;
